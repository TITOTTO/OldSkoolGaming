<style>
.btn-color{
  background-color: #0e1c36;
  color: #fff;
  
}

.profile-image-pic{
  height: 200px;
  width: 200px;
  object-fit: cover;
}



.cardbody-color{
  background-color: #ebf2fa;
}

a{
  text-decoration: none;
}
</style>
<div class="container-fluid">
<p class="text-uppercase font-weight-bold"></p>
<div class="position-relative border-radius-xl overflow-hidden shadow-lg mb-7 bg-white">

<%# Hero page %>
<!-- -------- START HEADER 1 w/ text and image on right ------- -->
  <header>
    <div class="page-header min-vh-100">
      <div class="oblique position-absolute top-0 h-100 d-md-block d-none">
        <div>
        <%= image_tag("caorder.png", height: 850) %>
        </div>
      </div>
      <div>
<div class="container mb-12 d-flex justify-content-center text-center">
<div class="row">
<h1> Votre panier </h1>
			<table width=5%>
			  <thead>
			    <tr>
			      <th scope="col">ID</th>
			      <th scope="col">Avatar</th>
			      <th scope="col">Produit</th>
			      <th scope="col">Prix</th>
			      <th scope="col">Retirer l'article</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @cart.articles.each do |article| %>
			    <tr>
			      <th scope="row"><%= article.id %></th>
			      <td width=20%><%= image_tag article.images[0], width: "50rem" if article.images.attached? %></td>
			      <td width=20%><%= link_to article.title, article_path(article) %></td>
			      <td width=20%><%= article.price %></td>
			      <td width=20%><%= link_to "X", user_cart_path(current_user, current_user.cart, article_id: article.id), method: :delete, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> </td>
			    </tr>
			    <% end %>
			  </tbody>
			</table>

			<p class="text-right">
			<%= form_tag orders_path do %>
				<article>
				<% if flash[:error].present? %>
					<div id="error_explanation">
					<p><%= flash[:error] %></p>
					</div>
				<% end %>
				<label class="amount">
					<span>Total : <%= @cart.total %> €</span>
				</label>
				</article>
				<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
					data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
					data-description="Achat d'un produit"
					data-amount="<%= @cart.total * 100 %>"
					data-label="Payer"
					data-locale="auto">
				</script>
			<% end %>
			</p>

		</div>
	</div>
</div>

