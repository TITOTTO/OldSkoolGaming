  <div class="form-group mb-3 mt-3 col-sm">
  <%= @article.title %>
    <%= form.text_field :title, class:"form-control", placeholder:"Nom" %>
  </div>

  <div class="form-group mb-3 mt-3 col-sm">
  <%= @article.content %>
    <%= form.text_field :description, class:"form-control", placeholder:"Description" %>
  </div>


  <div class="form-group mb-3 mt-3 col-sm">
  <%= @article.console %>
    <%= form.text_field :console, class:"form-control", placeholder:"Console" %>
  </div>

  <div class="form-group mb-3 mt-3 col-sm">
  <%= @article.price %>
    <%= form.text_field :price, class:"form-control", placeholder:"Prix" %>
  </div>
  

