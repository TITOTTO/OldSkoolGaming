<!-- @user.my_articles permet de voir ce que l'on a en vente
@user.my_purchases permet de voir ce que l'on a déjà acheté -->



<div class="container emp-profile">
            <div class="container" >
                <div class="row">
                    <div class="col-md-4">
                        <div class="profile-img">
                            <%if @user.avatar.attached?%>
                                <%= image_tag @user.avatar, alt: 'avatar' %>
                            <% else %>
                                <img src="https://media.istockphoto.com/id/1307387607/vector/anonymous-vector-icon-incognito-sign-privacy-concept-human-head-with-glitch-face-personal.jpg?s=612x612&w=0&k=20&c=gABTCg7-xeCyeWDF-JnNzPbpnCeTX8wH-TxIYdkC0yQ=" alt=""/>
                            <% end %>
                            <%= form_with url: user_avatars_path(@user), multipart: true do |form| %> <!-- Ce formulaire marche niquel ! -->
                                <%= form.file_field :avatar %>
                                <%= submit_tag "mettre à jour" %>
                            <% end %>
                            
                           
                        </div>
                        <%= form_with url: "/modifications/#{@user.id}", method: :patch do |form| %>
                        
                    </div>

                    <div class="col-md-6">
                        <div class="profile-head">
                                    <h5>
                                        <%= @user.first_name %> <%= @user.last_name %>
                                    </h5>
                                    <h6>
                                        <%= @user.email %>
                                    </h6>
                                    
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                                </li>                                
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <%= form.submit 'Edit', :class => 'profile-edit-btn' %>
                    </div>
                </div>
                
                    <div class="col-md-8">
                        <div class="tab-content profile-tab" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>ID User</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p><%= @user.id %></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Prénom</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p> <%= @user.first_name%>
                                                <%= form.text_field :first_name%></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Nom</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p><%= @user.last_name %>
                                                <%= form.text_field :last_name%></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Email</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p><%= @user.email %>
                                                <%= form.email_field :email%></p>
                                            </div>
                                        </div>                                        
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label>Description</label>
                                            </div>
                                            <div class="col-md-6">
                                                <p><%= @user.description %>
                                                <%= form.text_area :description, size: "30*3" %> </p>
                                            </div>
                                            </div>
                                        </div>
                                        
                                </div>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>           
        </div>
        <% end %>